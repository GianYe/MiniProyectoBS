@model IEnumerable<Miniproyecto_Bertoni_Solutions.Models.Photo>

<table class="table .table-dark">
    <tr>
        <th>
            Title
        </th>
        <th>
            Thumbnail
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                <img src="@item.thumbnailUrl" />
            </td>
            <td>
                <button class="btnComment btn btn-dark"id="@item.id" href="#com">View Comments</button>
            </td>
        </tr>
    }

</table>

<script type="text/javascript">$(function () {
        $(".btnComment").click(function () {
            $.get("https://" + window.location.host + "/Home/Comments?photoId=" + $(this).attr("id"), function (data) {
                $("#Comments").html(data);
            });
        });
    });</script>
